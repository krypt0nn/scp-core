{
    "compilerOptions": {
        "module": "es2020",
        "target": "es2021",
        "moduleResolution": "Node",
        "declaration": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "dist"
    },
    "include": ["src/*", "src/**/*"],
    "exclude": ["node_modules"]
}